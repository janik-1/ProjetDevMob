<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_stat"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spinner_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goals"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edittext_buts_marques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goals_conceded"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edittext_buts_encaisses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Possession"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edittext_possession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tirs"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edittext_tirs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ShotsGoals"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edittext_tirs_cadres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Save"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"/>

</LinearLayout>